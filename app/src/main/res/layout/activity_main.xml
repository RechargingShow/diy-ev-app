<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/car_information_text_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Hyundai Kona Information"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/car_information_text" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/start_button_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_information_text_layout">

            <Button
                android:text="Start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/start_button"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/test_odb2_button_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_button_layout">

            <Button
                android:text="Test ODB2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/test_odb2_button"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/test_http_button_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/test_odb2_button_layout">

            <Button
                    android:text="Test Http"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_http_button"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/bt_connection_state_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/test_http_button_layout">

            <TextView
                    android:text="ODB2 Dongle: NOT CONNECTED"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_connection_state_label"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
